{
  "manifest_version": 3,
  "name": "Send to AI",
  "version": "1.7",
  "description": "Отправить выделенный текст в различные AI-ассистенты (Qwen, Ernie, Grok, Z.ai, DeepSeek, Kimi, ChatGPT, Gemini)",
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.qwen.ai/*",
    "https://*.qwen.ai/*",
    "https://ernie.baidu.com/*",
    "https://*.baidu.com/*",
    "https://grok.com/*",
    "https://*.grok.com/*",
    "https://chat.z.ai/*",
    "https://*.z.ai/*",
    "https://chat.deepseek.com/*",
    "https://*.deepseek.com/*",
    "https://kimi.moonshot.cn/*",
    "https://*.kimi.com/*",
    "https://www.kimi.com/*",
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://*.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
